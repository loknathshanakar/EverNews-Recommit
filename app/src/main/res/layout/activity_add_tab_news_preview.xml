<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_ADD"
            android:layout_marginTop="-6.9dp"
            android:visibility="invisible"/>
        <View
            android:id="@+id/separtator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blackish" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_eight"
            android:layout_below="@+id/separtator"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail_add"
                android:layout_width="@dimen/sixty_eight"
                android:layout_height="match_parent"
                android:src="@drawable/recode" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/eight_dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/channelMeta_add"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/add_add"
                android:layout_width="@dimen/sixty_eight"
                android:layout_height="@dimen/thirty_six"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/five_dp"
                android:background="@drawable/button_add"
                android:padding="2dp"
                android:text="Add"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/channel_name_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/generic_margin"
            android:text="News Channel"
            android:textColor="#085FB4"
            android:textSize="14sp" />

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="4dp"
            android:numColumns="2"
            android:layout_above="@+id/rl_od"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:verticalSpacing="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>